    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "type": "debugpy",
            "request": "launch",
             "cwd": "${workspaceFolder}/fastapi",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0", 
                "--port", 
                "3001",

            ],
            "jinja": true
        },
        {
            "name": "Python Debugger: Streaming API",
            "type": "debugpy",
            "request": "launch",
             "cwd": "${workspaceFolder}/research",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--host",
                "0.0.0.0", 
                "--port", 
                "8000",
            ],
            "jinja": true
        },
         {
            "name": "Debug Next.js",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/nextjs/node_modules/next/dist/bin/next",
            "args": ["dev"],
            "cwd": "${workspaceFolder}/nextjs",
            "skipFiles": ["<node_internals>/**"],
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "serverReadyAction": {
                "pattern": "- Local:.*https?://localhost:([0-9]+)",
                "uriFormat": "http://localhost:%s",
                "action": "debugWithChrome"
            }
        },
        {
            "name": "Attach to Next.js",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "restart": true,
            "skipFiles": ["<node_internals>/**"]
        }
    ]
}